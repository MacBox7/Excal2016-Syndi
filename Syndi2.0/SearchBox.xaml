<UserControl x:Class="Syndi2._0.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syndi2._0"
             mc:Ignorable="d" 
             d:DesignHeight="59" d:DesignWidth="300" Foreground="{x:Null}">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="39" Margin="10,10,0,10" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="226" FontSize="26.667" BorderBrush="{x:Null}" Foreground="White" Background="{x:Null}"/>
        <Border Width="59" Height="59" HorizontalAlignment="Right" VerticalAlignment="Center" >
            <Button x:Name="button" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="59" Height="59" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="#FFF7F7F7">
                <Image x:Name="image" Height="24" Width="24" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Resource/Icons/search.png"/>
            </Button>
        </Border>
    </Grid>
</UserControl>
