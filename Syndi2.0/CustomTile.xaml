<UserControl x:Class="Syndi2._0.CustomTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syndi2._0"
             mc:Ignorable="d" 
             d:DesignHeight="192" d:DesignWidth="192" Width="192" Height="192">
    <Grid Margin="0" Width="192" Height="192">
        <Button x:Name="ContenTileButton" Background="{x:Null}" Margin="0" Width="175" Height="175" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Height="170" Width="170">
                <TextBlock x:Name="TileHeader" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tile Header" VerticalAlignment="Top" Width="166" Foreground="#99FFFFFF"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
