<UserControl x:Class="Syndi2._0.CustomTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syndi2._0"
             mc:Ignorable="d" 
             d:DesignHeight="192" d:DesignWidth="192" Width="192" Height="192">
    <Button x:Name="ContentTileButton" Background="{x:Null}" Width="192" Height="192" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="{x:Null}">
        <Grid Height="160" Width="160">
            <TextBlock x:Name="TileHeader" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tile Header" VerticalAlignment="Top" Width="166" Foreground="#99FFFFFF"/>
        </Grid>
    </Button>
</UserControl>
