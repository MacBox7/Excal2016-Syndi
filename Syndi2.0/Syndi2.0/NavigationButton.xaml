<UserControl x:Class="Syndi2._0.NavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syndi2._0"
             mc:Ignorable="d" 
             d:DesignHeight="46" d:DesignWidth="300">
    <Border Style="{StaticResource FolderButtonBorder}" Width="Auto" Height="46" Margin="0">
        <Button Style="{StaticResource FolderButton}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0" MouseEnter="Highlight" MouseLeave="RemoveHighlight" Width="auto" Cursor="Hand">
            <TextBlock x:Name="NavPath"><Run x:Name="Display" Text="Hey" Foreground="#CCFFFFFF" FontWeight="Bold"/><Run x:Name="PathInfo" Tag="Hlelo" Foreground="White"></Run></TextBlock>
        </Button>
    </Border>
</UserControl>
