<UserControl x:Class="Syndi2._0.CustomTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Syndi2._0"
             mc:Ignorable="d" 
             d:DesignHeight="192" d:DesignWidth="192" Width="192" Height="192">
    <Border Style="{StaticResource FolderButtonBorder}">
        <Button x:Name="ContentTileButton" Style="{StaticResource FolderButton}" Width="192" Height="192" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand" ToolTip="Explore this PC">
            <Grid Height="160" Width="160">
                <TextBlock HorizontalAlignment="Center" Height="139" TextWrapping="Wrap" VerticalAlignment="Center" Width="160" Foreground="#4C78F3FF" Margin="0,21,0,0"><Run  x:Name="PcSize"  Text="00" FontSize="40"/><Run x:Name="SizeUnit" FontSize="15" Foreground="#99FFFFFF" FontWeight="Bold"/></TextBlock>
                <TextBlock x:Name="TileHeader" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tile Header" VerticalAlignment="Top" Width="166" Foreground="#99FFFFFF" FontWeight="Bold" Margin="0,0,-6,0"/>
            </Grid>
        </Button>
    </Border>
</UserControl>
